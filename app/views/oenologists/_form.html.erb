<%# Add Bootstrap %>
<div class="mt-3 form-control">
  <%= form_with(model: oenologist, local: true) do |form| %>
    <% if oenologist.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(oenologist.errors.count, "error") %> prohibited this oenologist from being saved:</h2>

        <ul>
        <% oenologist.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field mb-3">
      <%= form.label :Name, class: 'form-label' %>
      <%= form.text_field :Name, class: 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= form.label :Age, class: 'form-label' %>
      <%= form.number_field :Age, class:'form-control' %>
    </div>

    <div class="field">
      <%= form.label :Country, class: 'form-label' %>
      <%= form.text_field :Country, class: 'form-control' %>
    </div>

    <%# TODO add nested fields of job and magazine %>
    <div class="form-group mb-3" >
      <div class="btn btn-dark btn_red">
        <%= link_to_add_association 'Add Job', form, :positions, class: "btn_red" %>
      </div>
    </div>

    <div class="actions">
      <%= form.submit 'Add new Oenologist', :class=>'btn btn-success btn-red' %>
    </div>
  <% end %>
</div>